<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head.ejs") %>
</head>

<body>
    <h1 class="text-center bg-dark p-5 text-white m-0 header-gradient">Crypto News and Research</h1>

    <nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark" data-bs-theme="dark">
        <%- include("partials/nav.ejs") %>
    </nav>
<main>
    <div class="container py-4">
        <h1 class="mb-4">Crypto Dashboard</h1>

        <div class="row g-4">
            <!-- Top 20 by Volume -->
            <div class="col-12 col-lg-6">
                <div class="card bg-dark text-light h-100">
                    <div class="card-body">
                        <h5 class="card-title">Top 20 by 24h Volume (USD)</h5>
                        <div class="table-responsive">
                            <table class="table table-dark table-striped table-hover align-middle mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Coin</th>
                                        <th>Symbol</th>
                                        <th class="text-end">Price</th>
                                        <th class="text-end">24h Volume</th>
                                        <th class="text-end">24h %</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% (volRows || []).forEach((r, i)=> { %>
                                        <tr>
                                            <td>
                                                <%= i+1 %>
                                            </td>
                                            <td>
                                                <%= r.name %>
                                            </td>
                                            <td><span class="badge bg-secondary">
                                                    <%= r.symbol %>
                                                </span></td>
                                            <td class="text-end">
                                                <%= r.price %>
                                            </td>
                                            <td class="text-end">
                                                <%= r.volume %>
                                            </td>
                                            <td class="text-end">
                                                <span
                                                    class="<%= r.change.startsWith('-') ? 'text-danger' : 'text-success' %>">
                                                    <%= r.change %>
                                                </span>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Top 20 Gainers -->
            <div class="col-12 col-lg-6">
                <div class="card bg-dark text-light h-100">
                    <div class="card-body">
                        <h5 class="card-title">Top 20 Gainers (24h %)</h5>
                        <div class="table-responsive">
                            <table class="table table-dark table-striped table-hover align-middle mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Coin</th>
                                        <th>Symbol</th>
                                        <th class="text-end">Price</th>
                                        <th class="text-end">24h Volume</th>
                                        <th class="text-end">24h %</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% (gainRows || []).forEach((r, i)=> { %>
                                        <tr>
                                            <td>
                                                <%= i+1 %>
                                            </td>
                                            <td>
                                                <%= r.name %>
                                            </td>
                                            <td><span class="badge bg-secondary">
                                                    <%= r.symbol %>
                                                </span></td>
                                            <td class="text-end">
                                                <%= r.price %>
                                            </td>
                                            <td class="text-end">
                                                <%= r.volume %>
                                            </td>
                                            <td class="text-end">
                                                <span class="text-success">
                                                    <%= r.change %>
                                                </span>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    </main>
    <footer class="site-footer">
        <%- include("partials/footer.ejs") %>
    </footer>
</body>

</html>